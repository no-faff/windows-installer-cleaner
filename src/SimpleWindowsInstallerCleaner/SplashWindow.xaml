<Window x:Class="SimpleWindowsInstallerCleaner.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple Windows installer cleaner"
        Width="480" Height="220"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <!-- Outer border gives the rounded corners -->
    <Border Background="#1e293b"
            CornerRadius="12">
        <Grid Margin="28,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- app name -->
                <RowDefinition Height="20"/>    <!-- spacer -->
                <RowDefinition Height="Auto"/>  <!-- progress bar -->
                <RowDefinition Height="10"/>    <!-- spacer -->
                <RowDefinition Height="Auto"/>  <!-- step text -->
                <RowDefinition Height="*"/>     <!-- spacer -->
                <RowDefinition Height="Auto"/>  <!-- version -->
            </Grid.RowDefinitions>

            <!-- App name (two-line, bold) -->
            <StackPanel Grid.Row="0">
                <TextBlock Text="Simple Windows"
                           Foreground="#f8fafc"
                           FontSize="22"
                           FontWeight="Bold"
                           LineHeight="28"/>
                <TextBlock Text="installer cleaner"
                           Foreground="#f8fafc"
                           FontSize="22"
                           FontWeight="Bold"
                           LineHeight="28"/>
            </StackPanel>

            <!-- Progress bar (the star of the show) -->
            <Border Grid.Row="2" CornerRadius="12" Background="#0f172a" Height="24">
                <Border x:Name="SplashProgressBorder" CornerRadius="12"
                        HorizontalAlignment="Left" Width="0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#4f46e5" Offset="0"/>
                            <GradientStop Color="#6d28d9" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Border>
            <!-- Hidden ProgressBar for code-behind compatibility -->
            <ProgressBar x:Name="SplashProgress" Visibility="Collapsed"
                         Minimum="0" Maximum="100" Value="0"/>

            <!-- Step text -->
            <TextBlock Grid.Row="4"
                       x:Name="StepText"
                       Text="Step 1/5: Checking system status..."
                       Foreground="#cbd5e1"
                       FontSize="12"/>

            <!-- Version (bottom right) -->
            <TextBlock Grid.Row="6"
                       Text="v0.1.0-Î±"
                       Foreground="#94a3b8"
                       FontSize="11"
                       HorizontalAlignment="Right"/>
        </Grid>
    </Border>
</Window>
