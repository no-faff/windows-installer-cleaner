<Window x:Class="SimpleWindowsInstallerCleaner.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About"
        Width="420" Height="260"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Background="{StaticResource Base100}">

    <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="6"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="4"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="4"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Windows installer cleaner"
                       Foreground="#f8fafc" FontSize="20" FontWeight="SemiBold" TextWrapping="Wrap"/>
            <TextBlock Grid.Row="2" Text="Version 0.1.0-alpha"
                       Foreground="#cbd5e1" FontSize="12"/>
            <TextBlock Grid.Row="4" Foreground="#cbd5e1" FontSize="12">
                <Run Text="Part of the "/>
                <Hyperlink NavigateUri="https://github.com/no-faff"
                           Click="Hyperlink_Click"
                           Foreground="#818cf8" TextDecorations="None">No faff</Hyperlink>
                <Run Text=" suite"/>
            </TextBlock>
            <TextBlock Grid.Row="6" Foreground="#cbd5e1" FontSize="12">
                <Run Text="MIT licence Â· "/>
                <Hyperlink NavigateUri="https://github.com/no-faff/windows-installer-cleaner"
                           Click="Hyperlink_Click"
                           Foreground="#818cf8" TextDecorations="None">github.com/no-faff/windows-installer-cleaner</Hyperlink>
            </TextBlock>
            <Button Grid.Row="8" Style="{StaticResource PrimaryPill}"
                    Content="Close" IsCancel="True" HorizontalAlignment="Right"/>
    </Grid>
</Window>
