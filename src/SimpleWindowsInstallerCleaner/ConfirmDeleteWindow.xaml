<Window x:Class="SimpleWindowsInstallerCleaner.ConfirmDeleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirm delete"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.InputBindings>
        <KeyBinding Key="Escape" Command="{x:Static SystemCommands.CloseWindowCommand}"/>
    </Window.InputBindings>

    <Window.CommandBindings>
        <CommandBinding Command="{x:Static SystemCommands.CloseWindowCommand}" Executed="OnCancel"/>
    </Window.CommandBindings>

    <Border Background="#0f172a" CornerRadius="16" Padding="32,28"
            MaxWidth="400" MinWidth="320"
            BorderBrush="#334155" BorderThickness="1">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <TextBlock Text="&#x26A0;" Foreground="#f59e0b" FontSize="18"
                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock x:Name="MessageText" Foreground="#f8fafc" FontSize="14"
                           TextWrapping="Wrap" VerticalAlignment="Center"/>
            </StackPanel>

            <TextBlock Text="This cannot be undone." Foreground="#94a3b8" FontSize="12"
                       Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{StaticResource PrimaryPill}" Content="Cancel"
                        Click="OnCancel" Margin="0,0,8,0"/>
                <Button x:Name="DeleteButton" Content="Delete" Click="OnDelete"
                        Foreground="#f8fafc" FontSize="14" FontWeight="Medium"
                        Padding="28,8" Height="40" MinWidth="120" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Bg" Background="#991b1b" CornerRadius="20"
                                    Padding="{TemplateBinding Padding}"
                                    Height="{TemplateBinding Height}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Bg" Property="Background" Value="#7f1d1d"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="Bg" Property="Background" Value="#6b1a1a"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
