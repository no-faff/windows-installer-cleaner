<Window x:Class="SimpleWindowsInstallerCleaner.OrphanedFilesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Orphaned files"
        Width="600" Height="450"
        MinWidth="400" MinHeight="300"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>    <!-- file list -->
            <RowDefinition Height="10"/>   <!-- spacer -->
            <RowDefinition Height="Auto"/> <!-- summary line -->
            <RowDefinition Height="12"/>   <!-- spacer -->
            <RowDefinition Height="Auto"/> <!-- close button -->
        </Grid.RowDefinitions>

        <!-- ── File list ──────────────────────────────────────── -->
        <Border Grid.Row="0"
                BorderBrush="#D0D0D0"
                BorderThickness="1"
                Background="White">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <StackPanel>

                    <!-- Orphaned files (actionable) -->
                    <ItemsControl ItemsSource="{Binding ActionableFiles}"
                                  Padding="10,8,10,4">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="{Binding FileName}"
                                               FontSize="12"
                                               Foreground="#222"
                                               TextTrimming="CharacterEllipsis"
                                               ToolTip="{Binding FullPath}"/>
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding SizeDisplay}"
                                               FontSize="12"
                                               Foreground="#555"
                                               TextAlignment="Right"/>
                                    <TextBlock Grid.Column="2"
                                               Text="{Binding TypeLabel}"
                                               FontSize="12"
                                               Foreground="#888"
                                               Margin="8,0,0,0"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Excluded section (only shown if there are excluded files) -->
                    <StackPanel Visibility="{Binding HasExcludedFiles, Converter={StaticResource BoolToVis}}">

                        <!-- Separator with label -->
                        <Border BorderBrush="#E0E0E0"
                                BorderThickness="0,1,0,0"
                                Margin="10,4,10,0"
                                Padding="0,6,0,2">
                            <TextBlock Text="Excluded by filters"
                                       FontSize="11"
                                       Foreground="#888"
                                       FontStyle="Italic"/>
                        </Border>

                        <!-- Excluded files (greyed out, no interaction) -->
                        <ItemsControl ItemsSource="{Binding ExcludedFiles}"
                                      Padding="10,2,10,8">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="40"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding FileName}"
                                                   FontSize="12"
                                                   Foreground="#AAA"
                                                   TextTrimming="CharacterEllipsis"
                                                   ToolTip="{Binding FullPath}"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding SizeDisplay}"
                                                   FontSize="12"
                                                   Foreground="#BBB"
                                                   TextAlignment="Right"/>
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding TypeLabel}"
                                                   FontSize="12"
                                                   Foreground="#BBB"
                                                   Margin="8,0,0,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- ── Summary line ────────────────────────────────────── -->
        <TextBlock Grid.Row="2"
                   Text="{Binding Summary}"
                   FontSize="12"
                   Foreground="#555"/>

        <!-- ── Close button ─────────────────────────────────────── -->
        <Button Grid.Row="4"
                Content="Close"
                IsCancel="True"
                HorizontalAlignment="Right"
                Padding="20,7"
                FontSize="13"/>

    </Grid>
</Window>
