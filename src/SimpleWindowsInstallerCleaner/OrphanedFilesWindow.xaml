<Window x:Class="SimpleWindowsInstallerCleaner.OrphanedFilesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Orphaned files"
        Width="920" Height="540"
        MinWidth="600" MinHeight="380"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource Base100}"
        Loaded="Window_Loaded">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="380"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource CardNoPad}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto" MaxHeight="150"/>
                        </Grid.RowDefinitions>

                        <ListBox Grid.Row="0" x:Name="ActionableList"
                                 ItemsSource="{Binding ActionableFiles}"
                                 SelectedItem="{Binding SelectedFile, Mode=TwoWay}"
                                 GotFocus="ActionableList_GotFocus"
                                 Background="Transparent" BorderThickness="0"
                                 Padding="16,10,16,6" HorizontalContentAlignment="Stretch">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="72"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding FileName}"
                                                   Foreground="#f8fafc" FontSize="14"
                                                   TextTrimming="CharacterEllipsis" ToolTip="{Binding FullPath}"/>
                                        <TextBlock Grid.Column="1" Text="{Binding SizeDisplay}"
                                                   Foreground="#cbd5e1" FontSize="12" TextAlignment="Right"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <StackPanel Grid.Row="1"
                                    Visibility="{Binding HasExcludedFiles, Converter={StaticResource BoolToVis}}">
                            <Border BorderBrush="#334155" BorderThickness="0,1,0,0"
                                    Margin="12,4,12,0" Padding="0,8,0,4">
                                <TextBlock Text="Excluded by filters"
                                           Foreground="#64748b" FontSize="11" FontStyle="Italic"/>
                            </Border>
                            <TextBlock Text="These files match your exclusion filters and won't be moved or deleted."
                                       Foreground="#64748b" FontSize="11"
                                       Margin="12,0,12,4" TextWrapping="Wrap"/>
                        </StackPanel>

                        <ListBox Grid.Row="2" x:Name="ExcludedList"
                                 ItemsSource="{Binding ExcludedFiles}"
                                 SelectedItem="{Binding SelectedFile, Mode=TwoWay}"
                                 GotFocus="ExcludedList_GotFocus"
                                 Background="Transparent" BorderThickness="0"
                                 Padding="16,2,16,10" HorizontalContentAlignment="Stretch"
                                 Visibility="{Binding HasExcludedFiles, Converter={StaticResource BoolToVis}}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="72"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding FileName}"
                                                   Foreground="#64748b" FontSize="14"
                                                   TextTrimming="CharacterEllipsis" ToolTip="{Binding FullPath}"/>
                                        <TextBlock Grid.Column="1" Text="{Binding SizeDisplay}"
                                                   Foreground="#64748b" FontSize="12" TextAlignment="Right"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource Card}">
                    <Grid>
                        <TextBlock Text="Select a file to view details."
                                   Foreground="#64748b" FontSize="12" FontStyle="Italic"
                                   VerticalAlignment="Center" HorizontalAlignment="Center"
                                   TextAlignment="Center" TextWrapping="Wrap">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasSelection}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <TextBlock Text="No metadata available."
                                   Foreground="#64748b" FontSize="12" FontStyle="Italic"
                                   VerticalAlignment="Center" HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   Visibility="{Binding ShowNoMetadata, Converter={StaticResource BoolToVis}}"/>

                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled"
                                      Visibility="{Binding ShowDetails, Converter={StaticResource BoolToVis}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/><ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/><RowDefinition Height="8"/>
                                    <RowDefinition Height="Auto"/><RowDefinition Height="8"/>
                                    <RowDefinition Height="Auto"/><RowDefinition Height="8"/>
                                    <RowDefinition Height="Auto"/><RowDefinition Height="8"/>
                                    <RowDefinition Height="Auto"/><RowDefinition Height="8"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Author" Foreground="#64748b" FontSize="11"/>
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding SelectedDetails.Author}" Foreground="#f8fafc" FontSize="12" TextWrapping="Wrap"/>
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Title" Foreground="#64748b" FontSize="11"/>
                                <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding SelectedDetails.Title}" Foreground="#f8fafc" FontSize="12" TextWrapping="Wrap"/>
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Subject" Foreground="#64748b" FontSize="11"/>
                                <TextBlock Grid.Row="4" Grid.Column="2" Text="{Binding SelectedDetails.Subject}" Foreground="#f8fafc" FontSize="12" TextWrapping="Wrap"/>
                                <TextBlock Grid.Row="6" Grid.Column="0" Text="Digital signature" Foreground="#64748b" FontSize="11"/>
                                <TextBlock Grid.Row="6" Grid.Column="2" Text="{Binding SelectedDetails.DigitalSignature}" Foreground="#f8fafc" FontSize="12" TextWrapping="Wrap"/>
                                <TextBlock Grid.Row="8" Grid.Column="0" Text="File size" Foreground="#64748b" FontSize="11"/>
                                <TextBlock Grid.Row="8" Grid.Column="2" Text="{Binding SelectedFile.SizeDisplay}" Foreground="#f8fafc" FontSize="12"/>
                                <TextBlock Grid.Row="10" Grid.Column="0" Text="Comment" Foreground="#64748b" FontSize="11"/>
                                <TextBlock Grid.Row="10" Grid.Column="2" Text="{Binding SelectedDetails.Comments}" Foreground="#f8fafc" FontSize="12" TextWrapping="Wrap"/>
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <DockPanel Grid.Row="2" LastChildFill="False">
                <TextBlock DockPanel.Dock="Left" Text="{Binding Summary}"
                           Foreground="#cbd5e1" FontSize="12" VerticalAlignment="Center"/>
                <Button DockPanel.Dock="Right" Style="{StaticResource PrimaryPill}"
                        Content="Close" IsCancel="True"/>
            </DockPanel>
    </Grid>
</Window>
